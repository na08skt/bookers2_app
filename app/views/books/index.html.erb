<h3>Books</h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td>
            <%= image_tag book.user.get_profile_image(100,100)%>
        </td>
        <td>
          <%= link_to book.book_name, book_path(book.id) %>
        </td>
        <td>
          <%= book.opinion %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>