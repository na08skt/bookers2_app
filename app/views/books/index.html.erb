<div class="container">
  <div class="row">
    <% if @book_new.errors.any? %>
      <p>
        <%= pluralize(@book_new.errors.count, "error")%> prohibited this obj from being saved      
      </p></br>
      <p>
        <% @book_new.errors.full_messages.each do |message| %>
          <ul>
            <li>
              <%= message %>
            </li>
          </ul>
        <% end %>
      </p>
    <% end %>
  </div>
</div>


<div class="container px-5 px-sm-0" >
  <div class="row">

    <div class="col-md-3">
      <div class="side_top">
          <%= render 'users/UserInfo', user: current_user %>
      </div>

      <div class="side_bottom">
        <%= render 'NewBook', book_new: @book_new %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="main">
        <%= render 'books', books: @books %>
      </div>
    </div>

  </div>
</div>
