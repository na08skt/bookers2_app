<div class="contain">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>Editing Book</h3>
        <div class="row">
        <% if @book.errors.any? %>
          <div class="col" >
            <h4>
              <%= pluralize(@book.errors.count, "error")%> prohibited this obj from being saved
            </h4>
          </div>
        </div>
      <div class="col">
        <p>
          <% @book.errors.full_messages.each do |message| %>
            <ul>
              <li>
                <%= message %>
              </li>
            </ul>
          <% end %>
        <% end %>
        </p>
      </div>

        <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
          <p>Title</p>
             <input class="form-control book_title" value = @book.title type="text" name="book[title]" id="book_title">
              <%= f.text_field :title, value: @book.title %>
          <p>Opinion</p>
             <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea><br><br>
              <%= f.text_field :body %>
             <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
        <% end %>

      <p>
        <%= link_to "Show", book_path(book.id) %>|
        <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>