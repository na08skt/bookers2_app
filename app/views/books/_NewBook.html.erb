<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="mt-3">New book</h3>

        <%= form_with model: book_new, url: books_path, method: :post do |f| %>
          <div class="form_group">
            <p>Title</p>
            <%= f.text_field :title %>
          </div>
          <div class="form_group">
            <p>Opinion</p>
            <%= f.text_field :body %>
          </div><br>
          <%= f.submit "Create Book"%>
        <% end %>
    </div>
  </div>
</div>









