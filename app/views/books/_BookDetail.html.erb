<div class="BookDetail">
    <table>
        <thead>
          <tr>
            <th>
              <p>Book detail</p>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
               <%= link_to image_tag(book.user.get_profile_image(100,100)), book_path(book.id) %>
            </td>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <% if book.user == current_user %>
              <td>
                <p class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(book.id) %></p>
              </td>
              <td>
                <%= link_to "Destroy", book_path(book_destroy.id), method: :delete, "data-confirm"=>"本当に消しますか？" %>
             </td>
            <% end %>
          </tr>
          <tr>
            <td>
            <%= link_to book.user.name, user_path(user.id) %>
            </td>
          </tr>
        </tbody>
    </table>
</div>