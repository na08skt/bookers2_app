<h2>User Info</h2>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :profile_image %><br>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_field :introduction %>
  </div>
  <%= f.submit '投稿' %>
<% end %>
