<h3>User info</h3>
<table>
  <thead>
    <tr>
      <th>
        <%= image_tag @user.get_profile_image(100,100) %>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <p>
          <span>name</span>
        </p>
      </td>
      <td>
        <p>
          <span>
            <%= @user.name %>
          </span>
        </p>
      </td>
    </tr>
    <tr>
      <td>
        <p>
          <span>introduction</span>
        </p>
      </td>
      <td>
        <p>
          <span>
            <%= @user.introduction %>
          </span>
        </p>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to "mark", edit_user_path %>
      </td>
    </tr>
  </tbody>
</table>