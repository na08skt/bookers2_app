<!--login/homeのuser info-->
<h3>User info</h3>
  <table class="table">
      <thead>
        <tr>
          <th>
            <%= image_tag user.get_profile_image(100,100) %>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <p>
              <span>name</span>
            </p>
          </td>
          <td>
            <p>
              <span>
                <%= user.name %>
              </span>
            </p>
          </td>
        </tr>
        <tr>
          <td>
            <p>
              <span>introduction</span>
            </p>
          </td>
          <td>
            <p>
              <span>
                <%= user.introduction %>
              </span>
            </p>
          </td>
        </tr>
        <tr>
          <td>
            <div class="row btn-block">
              <%= link_to edit_user_path(user.id), class:'btn btn-outline-secondary btn-block' do  %>
                <i class="fas fa-user-cog"></i>
              <% end %>

            </div>
          </td>
        </tr>

    </tbody>
  </table>
