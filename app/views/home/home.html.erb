<div class="container px-5 px-sm-0" >
  <div class="row">

    <div class="col-md-3">
      <div class="side_top">
        <%= render 'users/UserInfo', user: @user %>
      </div>
      <div class="side_bottom">
        <%= render 'books/NewBook', book: @book, book_new: @book_new %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="main">
        <h3>Books</h3>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= image_tag current_user.get_profile_image(100,100) %>
                  </td>
                  <td>
                    <%= link_to current_user.book.title, book_path(book.id) %>
                  </td>
                  <td>
                    <%= current_user.book.body %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
                </div>
              </div>

  </div>
</div>